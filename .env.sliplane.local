# Sliplane Deployment Environment Variables
# Copy this file to .env.sliplane.local and fill in your actual values

# Application Configuration
APP_NAME=mammo-chat-app
APP_VERSION=1.0.0
APP_PORT=8080

# Python Environment
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONOPTIMIZE=1
PIP_NO_CACHE_DIR=1
PIP_DISABLE_PIP_VERSION_CHECK=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# API Keys (REPLACE WITH YOUR ACTUAL KEYS)
# These should be set as secrets in your sliplane dashboard
DEEPSEEK_API_KEY=sk-043566a9f0ce41099fd1dd0c19c025fe
HEYSOL_API_KEY=rc_pat_e6qbnv7mq4a3j538ghq3gidc6r5m268i1iz413hu

# Database Configuration (if needed in the future)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration (if needed in the future)
# REDIS_URL=redis://host:port/database

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_PORT=9090

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_ORIGINS=https://your-app-name.sliplane.io,http://localhost:8080

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# CORS Configuration
CORS_ORIGINS=https://your-app-name.sliplane.io
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# File Upload Configuration (if needed)
MAX_UPLOAD_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/json,text/plain

# Backup Configuration (if supported by platform)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# Development/Production Mode
ENVIRONMENT=production
DEBUG=false

# Sliplane-specific Configuration
SLIPLANE_APP_NAME=mammo-chat-app
SLIPLANE_DEPLOYMENT_STRATEGY=rolling
SLIPLANE_REPLICAS=2
SLIPLANE_MEMORY_LIMIT=1Gi
SLIPLANE_CPU_LIMIT=500m
SLIPLANE_MEMORY_REQUEST=256Mi
SLIPLANE_CPU_REQUEST=100m